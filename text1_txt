        "import time\n",
        "\n",
        "while True:\n",
        "    temperature = random.randint(1,100)\n",
        "    humidity = random.randint(1,100)\n",
        "    print(\"Temperature: \", temperature)\n",
        "    print(\"Humidity: \", humidity)\n",
        "    if temperature >= 60 and (30 < humidity > 60):\n",
        "        print(\"Alarm ON!\")\n",
        "        \n",
